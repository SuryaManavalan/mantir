{
  "name": "mantir",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm --workspace=@mantir/web run dev",
    "build": "npm --workspace=@mantir/web run build",
    "start": "npm --workspace=@mantir/web run start",
    "db:up": "cd packages/database && docker-compose up -d",
    "db:down": "cd packages/database && docker-compose down",
    "db:logs": "cd packages/database && docker-compose logs -f postgres",
    "db:migrate": "npm --workspace=@mantir/database run migrate",
    "db:migrate:dev": "npm --workspace=@mantir/database run migrate:dev",
    "db:generate": "npm --workspace=@mantir/database run generate",
    "db:studio": "npm --workspace=@mantir/database run studio",
    "db:seed": "npm --workspace=@mantir/database run seed",
    "postinstall": "npm --workspace=@mantir/database run generate"
  },
  "devDependencies": {
    "@types/node": "^20.17.9",
    "typescript": "^5.9.3"
  }
}
